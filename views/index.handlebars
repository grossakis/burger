<h1>Burgers!</h1>

<div id="burger-lists">

  <div id="burgers2eatdiv">
  <h2>Burgers to Eat</h2>

    {{#each burgers}}
    {{#unless devoured}}
    <span class="burgers-to-eat">{{id}}. {{burger_name}}<button class="devour-burger" data-id="{{id}}" data-newdevoured="{{devoured}}">Devour</button></span><br>
    {{/unless}}
    {{/each}}
  </div>

  <div id="burgerseatendiv">
  <h2>Burgers Eaten</h2>

    {{#each burgers}}

    {{#if devoured}}
    <span class="eaten-burgers">{{id}}. {{burger_name}}<br></span>
    {{/if}}
    {{/each}}
  </div>
</div>

<div id="form-div">
<h2 id="form-head">Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Name Your Burger:</label>
    <input type="text" id="burger-input" name="name">
  </div>

  <button type="submit">Add New Burger</button>
</form>

</div>
